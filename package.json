{
  "name": "@settlemint/databrokerdao-data-gateway",
  "version": "0.0.0-development",
  "description": "Mint v2: the dAPI components",
  "main": "dist/server.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build-ts": "tsc --declaration",
    "watch": "tsc -w --declaration",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "pretest": "npm run tslint",
    "build": "npm run build-ts && npm run uglifyjs",
    "build:internal": "npm run build-ts",
    "test": "jest --forceExit --runInBand --detectOpenHandles --coverage --verbose || exit 0",
    "semantic-release": "semantic-release",
    "prepublishOnly": "docker build --build-arg NPM_TOKEN=${NPM_TOKEN} -t settlemint/mint -t settlemint/mint-dapi .",
    "uglifyjs": "uglifyjs-folder ./dist -yeo ./dist -x .js",
    "start": "ts-node src/server.ts",
    "dev": "./node_modules/nodemon/bin/nodemon.js",
    "loadfixtures": "node dist/fixtures.js",
    "travis-deploy-once": "travis-deploy-once --pro",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w"
  },
  "repository": "https://github.com/settlemint/mint-dapi.git",
  "LICENCE": "SEE LICENSE IN LICENSE",
  "author": "SettleMint <hello@settlemint.com>",
  "bugs": {
    "url": "https://github.com/settlemint/mint-dapi/issues"
  },
  "files": [
    "dist",
    "public",
    "templates"
  ],
  "homepage": "https://github.com/settlemint/mint-dapi",
  "dependencies": {
    "async": "^2.6.1",
    "async-retry": "^1.2.3",
    "axios": "^0.18.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "mongodb": "3.1.13",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "rtrim": "^1.0.0",
    "tsutils": "^3.8.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/npm",
      "semantic-release-docker"
    ],
    "prepare": [
      "@semantic-release/npm"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github",
      {
        "path": "semantic-release-docker",
        "name": "settlemint/mint-dapi"
      }
    ],
    "success": [
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.9",
    "@types/async": "^2.4.1",
    "@types/async-lock": "^1.1.0",
    "@types/async-retry": "^1.2.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/bigi": "^1.4.2",
    "@types/boom": "^7.2.1",
    "@types/cron": "^1.6.0",
    "@types/dotenv": "^6.1.0",
    "@types/ecurve": "^1.0.0",
    "@types/express": "^4.16.1",
    "@types/hapi": "^18.0.0",
    "@types/hapi-auth-jwt2": "^8.0.2",
    "@types/inert": "^5.1.2",
    "@types/jest": "^24.0.6",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.120",
    "@types/lodash.get": "^4.4.4",
    "@types/lodash.keyby": "^4.6.4",
    "@types/lodash.set": "^4.3.4",
    "@types/lru-cache": "^4.1.1",
    "@types/minimist": "^1.2.0",
    "@types/mock-aws-s3": "^2.6.1",
    "@types/mongodb": "^3.1.19",
    "@types/newrelic": "^4.11.0",
    "@types/node": "^11.9.4",
    "@types/pdfkit": "^0.7.36",
    "@types/qr-image": "^3.2.1",
    "@types/raven": "^2.5.2",
    "@types/request-promise": "^4.1.42",
    "@types/sleep": "0.0.7",
    "@types/vision": "5.3.5",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "semantic-release": "^15.13.3",
    "travis-deploy-once": "^5.0.11",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.15.0",
    "typescript": "^3.3.3",
    "uglify-js": "^3.4.9",
    "uglifyjs-folder": "^1.5.1"
  }
}
